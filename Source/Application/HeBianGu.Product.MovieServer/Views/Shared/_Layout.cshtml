    </div>

    @*菜单*@
    <div class="navgationall">
        <ul class="nav1">
            <li>@Html.ActionLink("首页", "Index", "Home")"</li>
            <li>@Html.ActionLink("动作片", "Action", "Home")"</li>
            <li>@Html.ActionLink("喜剧片", "Comedy", "Home")"</li>
            <li>@Html.ActionLink("爱情片", "AiQing", "Home")"</li>
            <li>@Html.ActionLink("科幻片", "KeHuan", "Home")"</li>
            <li>@Html.ActionLink("剧情片", "JuQing", "Home")"</li>
            <li>@Html.ActionLink("悬疑片", "XuanYi", "Home")"</li>
            <li>@Html.ActionLink("战争片", "ZhanZheng", "Home")"</li>
            <li>@Html.ActionLink("恐怖片", "KongBu", "Home")"</li>
            <li>@Html.ActionLink("灾难片", "Zhainan", "Home")"</li>
            <li>@Html.ActionLink("连续剧", "LianXuJu", "Home")"</li>
            <li>@Html.ActionLink("动漫", "DongMan", "Home")"</li>
            <li>@Html.ActionLink("关于", "About", "Home")"</li>
        </ul>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @*列表信息*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>
</body>
