    }

    a:visited {
        text-decoration: none;
    }

    a:hover {
        text-decoration: none;
    }

    a:active {
        text-decoration: none;
    }

    .navgationall {
        width: 100%;
        height: 36px;
        line-height: 36px;
        background: #000;
        margin: 10px auto;
    }

    .nav1 {
        width: 960px;
        height: 36px;
        margin: 0 auto;
    }

        .nav1 li {
            float: left;
            width: 70px;
            border-right: #F5F5F5 solid 2px;
            text-align: center;
        }

    /*.nav .last {
            border-right: none;
        }*/

    .lastleft {
        width: 25%;
        float: left;
        height: 100% auto;
        line-height: 36px;
        border: #708090 solid 2px;
        margin: 10px auto;
    }

    .row {
        width: 74%;
        float: right;
        height: 100% auto;
        line-height: 36px;
        /*background: #708090;*/
        border: #708090 solid 2px;
        margin: 10px auto;
    }

    .col-md-4 {
        width: 50%;
        float: left;
        height: 300px;
        line-height: 36px;
        border: #708090 solid 2px;
        margin: 10px auto;
    }

    .imgitem {
        width: 40%;
        float: left;
        height: 90%;
        line-height: 36px;
        /*background: #708090;*/
        border: #708090 solid 2px;
        margin: 10px auto;
    }

    .imgdetial {
        width: 58%;
        float: right;
        height: 70%;
        line-height: 36px;
        border: #708090 solid 2px;
        margin: 10px auto;
    }

    .jumbotron {
        width: 60%;
        height: 100%;
        line-height: 36px;
        border: #708090 solid 2px;
        margin: 10px auto;
    }
</style>


<body>
    <div class="jumbotron">
